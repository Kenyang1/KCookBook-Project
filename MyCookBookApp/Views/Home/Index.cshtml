@model List<MyCookBookApp.Models.Recipe>

@{
    ViewData["Title"] = "Home Page";
    string userName = "Your Name Here"; // Replace with dynamic user logic if available
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Welcome, @userName</h1>
        <p class="lead">Your recipes are:</p>
    </div>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            <div class="col-md-8 offset-md-2">
                <ul class="list-group">
                    @foreach (var recipe in Model)
                    {
                        <li class="list-group-item">
                            <strong>@recipe.Name</strong>
                        </li>
                    }
                </ul>
            </div>
        }
        else
        {
            <div class="col-md-8 offset-md-2">
                <p class="text-center text-muted">You don’t have any recipes yet. Start adding some!</p>
            </div>
        }
    </div>
</div>
